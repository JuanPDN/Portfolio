---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/card.astro";
import { projectsEs } from "../../data/projects_es.ts";

const webProjects = projectsEs[1].list;
const mobileProjects = projectsEs[2].list;
const webApps = projectsEs[3].list;
const webGames = projectsEs[4].list;
---

<Layout title="Projects">
  <main>
    <div class="flex flex-col mx-8 my-8 items-center">
      <div class="lg:max-w-[900px] p-6 pt-10 max-w-[100vw]">
        <h2 class="text-3xl w-full mb-12 font-bold">Aplicaciones Web{"</>"}</h2>
        {
          webApps.map((project) => (
            <Card
              name={project.name}
              summary={project.summary}
              img={`/images/${project.image}`}
              ref={project?.ref}
              repo={project?.repo}
              stack={project.stack}
            />
          ))
        }
        <h2 class="text-3xl w-full mb-12 font-bold">Proyectos Web {"</>"}</h2>
        {
          webProjects.map((project) => (
            <Card
              name={project.name}
              summary={project.summary}
              img={`/images/${project.image}`}
              ref={project?.ref}
              repo={project?.repo}
              stack={project.stack}
            />
          ))
        }
        <h2 class="text-3xl w-full mb-12 font-bold">Juegos Web {"</>"}</h2>
        {
          webGames.map((project) => (
            <Card
              name={project.name}
              summary={project.summary}
              img={`/images/${project.image}`}
              ref={project?.ref}
              repo={project?.repo}
              stack={project.stack}
            />
          ))
        }
        <h2 class="text-3xl w-full mb-12 font-bold">
          Proyectos MoÃÅviles {"</>"}
        </h2>
        {
          mobileProjects.map((project) => (
            <Card
              name={project.name}
              summary={project.summary}
              img={`/images/${project.image}`}
              ref={project?.ref}
              repo={project?.repo}
              stack={project.stack}
            />
          ))
        }
      </div>
    </div>
  </main>
</Layout>
