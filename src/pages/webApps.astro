---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import projects from "../data/projects.ts";

const webApps = projects[3].list;
---

<Layout title="Web Apps">
  <main>
    <div class="flex flex-col mx-8 my-8 items-center">
      <div class="lg:max-w-[900px] p-6 pt-10 max-w-[100vw]">
        <h2 class="text-3xl w-full mb-12 font-bold">Web Apps {"</>"}</h2>
        {webApps.map((project) => (
          <Card
            name={project.name}
            summary={project.summary}
            img={`/images/${project.image}`}
            ref={project.ref}
          />
        ))}
      </div>
    </div>
  </main>
</Layout>
