---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslatedPath } from "../i18n/utils";

const {src} = Astro.props
const lang = getLangFromUrl(Astro.url);
const translatedPath = useTranslatedPath(lang);
---

<div class="avatar my-3 py-8 block">
  <div
    class="mx-auto w-36 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
  >
    <a href={translatedPath("/")}>
      <Image
        class="transition ease-in-out hover:scale-[105%]"
        src={src}
        height={400}
        width={400}
        alt="profile"
        loading="eager"
      />
    </a>
  </div>
</div>
