---
import { Image } from "astro:assets";
const { name, summary, ref, img, repo, stack } = Astro.props;
---

<div
  class="rounded-lg bg-base-200 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={ref} target="_blank" aria-label={name}>
    <div class="hero-content flex-col md:flex-row">
      <Image
        width={750}
        height={422}
        alt={name}
        src={img}
        class="min-w-full md:max-w-[13rem] rounded-lg shadow-2xl"
        decoding="async"
        title={name}
        loading="lazy"
      />
      <div>
        <h1 class="text-3xl font-bold">{name}</h1>
        <div class="flex gap-2 mt-2">
          {
            stack.map((element) => (
              <span class="badge badge-prymary">{element}</span>
            ))
          }
        </div>
        <p class="py-4">{summary}</p>
        <div class="flex gap-2">
          {
            ref && (
              <a target="_blank" href={ref} class="btn btn-primary">
                See now
              </a>
            )
          }
          {
            repo && (
              <a class="btn btn-neutral" href={repo} target="_blank">
                <Image
                  class="neutral-content"
                  loading="lazy"
                  width={20}
                  height={20}
                  src="/images/github.svg"
                  alt="github"
                />
                Repository
              </a>
            )
          }
        </div>
      </div>
    </div>
  </a>
</div>
<div class="divider"></div>
